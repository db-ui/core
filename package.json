{
  "name": "@db-ui/core",
  "version": "0.0.0",
  "description": "Technical Frontend implementation of the DB UX Design System.",
  "style": "./dist/css/enterprise/db-ui-core.css",
  "sass": "./sources/css/enterprise/db-ui-core.scss",
  "browser": "./dist/js/main.min.js",
  "bugs": {
    "url": "https://github.com/db-ui/core/issues"
  },
  "scripts": {
    "test": "npm-run-all --parallel lint:xo",
    "test:visual-regression:test": "backstop test --config=./tests/backstop.json",
    "test:visual-regression:approve": "backstop approve --config=./tests/backstop.json",
    "test:accessibility": "pa11y-ci",
    "test:lighthouse": "lighthouse https://db-ui.github.io/core/patterns/pages-sample-page/pages-sample-page.rendered.html --budget-path=.lighthouse-budget.json --view",
    "test:stylelint": "stylelint 'source/**/*.scss'",
    "test:webhint": "npx hint https://db-ui.github.io/core/styleguide/html/styleguide.html",
    "lint:xo": "xo",
    "lint": "npm-run-all lint:*",
    "validate:html": "html-validate public/styleguide/html/styleguide.html",
    "validate:prettier": "pretty-quick --staged",
    "validate": "npm run validate:prettier",
    "pl:build:enterprise": "patternlab build --config ./enterprise.patternlab-config.json",
    "pl:help": "patternlab --help",
    "pl:install:enterprise": "patternlab install --config ./enterprise.patternlab-config.json",
    "pl:serve:enterprise": "patternlab serve --config ./enterprise.patternlab-config.json",
    "pl:version": "patternlab --version",
    "css-deploy": "npm-run-all make-css css-copy",
    "css-copy": "cpr public/css/ dist/css/ --filter=\"^(?!.*db-ui-core[.a-z]*[.]css([.]map)?).*$\"",
    "css-watch": "nodemon --watch source/_patterns/ -e scss -x \"npm run make-css\"",
    "css-postcss": "postcss public/css/**/*.css --replace --map",
    "css-build:general": "sass source/css/enterprise/:public/css/enterprise --style=compressed --embed-sources --load-path=node_modules",
    "css-build:incremental:partials": "sass source/_patterns:dist/css --style=compressed --embed-sources --load-path=node_modules",
    "css-build:base": "sass source/css/db-ui-core.vars.scss:dist/css/db-ui-core.vars.css source/css/db-ui-core.general.scss:dist/css/db-ui-core.general.css --style=compressed --embed-sources --load-path=node_modules",
    "css-build:pattern-lab-ui": "sass source/css/pattern-scaffolding-project-specific.scss:public/css/pattern-scaffolding-project-specific.css --style=compressed --embed-sources --load-path=node_modules",
    "make-css": "npm-run-all css-build:** css-postcss",
    "js-deploy": "npm run js-build && cpr source/js dist/js -d",
    "js-build": "babel source/_patterns/**/*.script.js --minified --out-file source/js/main.min.js --source-maps & babel source/**/*.plugin.js --minified --out-file source/js/plugins.min.js --source-maps",
    "js-watch": "npm run js-build -- --watch",
    "copy-assets": "cpr node_modules/@db-ui/base/build/assets/icons dist/icons -d && cpr node_modules/@db-ui/base/build/assets/fonts dist/fonts --filter=\"^(.*[/]sources[/]).*$\" -d | cpr source/images dist/images -d | cpr source/favicon.ico dist/favicon.ico -o | cpr source/robots.txt dist/robots.txt -o | cpr source/site.webmanifest dist/site.webmanifest -o",
    "copy-scss-sources": "cpr source/_patterns/ sources/_patterns/ --filter=\"^(?!.*[.](scss|sass)$).*$\" -d | cpr source/css/ sources/css/ --filter=\"^(?!.*[.](scss|sass)$).*$\" -d",
    "clean": "rimraf dist",
    "build": "npm run clean && npm-run-all css-deploy js-deploy pl:build:* --parallel copy-assets copy-scss-sources",
    "start": "npm-run-all --parallel pl:serve:enterprise css-watch js-watch",
    "stylelint-check": "stylelint-config-prettier-check",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "keywords": [],
  "author": {
    "name": "Maximilian Franzke",
    "email": "maximilian.franzke@deutschebahn.com"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@csstools/normalize.css": "^12.0.0",
    "@db-ui/base": "^0.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@mfranzke/plugin-node-uiextension": "^1.0.0",
    "@pattern-lab/cli": "^5.16.2",
    "@pattern-lab/core": "^5.16.2",
    "@pattern-lab/engine-handlebars": "^5.16.1",
    "@pattern-lab/starterkit-handlebars-demo": "^5.16.2",
    "@pattern-lab/uikit-workshop": "^5.16.2",
    "@wemake-services/stylelint-config-scss": "^1.0.0",
    "autoprefixer": "^10.4.4",
    "backstopjs": "^6.0.4",
    "cpr": "^3.0.1",
    "details-element-polyfill": "^2.4.0",
    "dialog-polyfill": "^0.5.6",
    "html-validate": "^6.4.0",
    "html5-boilerplate": "^8.0.0",
    "husky": "^7.0.4",
    "iframe-resizer": "^4.3.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.0.1",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-focus": "^5.0.1",
    "postcss-list-style-safari-fix": "^1.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "sass": "^1.49.8",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "xo": "^0.48.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/db-ui/core.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://db-ui.github.io/core/"
}
